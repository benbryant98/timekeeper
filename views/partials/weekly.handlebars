<h1 class="is-size-3 has-text-weight-bold">Your week at a glance!</h1>

<div class="columns">
  {{#each (get_week monday)}}
    <div class="column">
      <div class="card">
        <div class="card-content">
          <div class="content">
            {{format_date this}}
          </div>
        </div>
      </div>
    </div>
  {{/each}}
</div>