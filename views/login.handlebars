<!-- I think the welcome message makes more sense being on this page-->
<div class="column">
  <div class="column is-centered">
    <h1 class="is-size-1">Welcome, please login or create an account for full access</h1>
  </div>
</div>

<div class="row">
  <div class="col-md-5">
    <h1 class="is-size-2">Login</h1>

    <form class="form login-form">
      <div class="form-group">
        <label for="email-login">Email:</label>
        <input class="input is-large input is-focused" type="text" id="email-login" />
      </div>
      <div class="form-group">
        <label for="password-login">Password:</label>
        <input class="input is-large input is-focused" type="password" id="password-login" />
      </div>
      <div class="form-group">
        <button class="button is-dark button is-medium is-half width button is-rounded button is-hovered button is-centered">LOGIN</button>
      </div>
    </form>
  </div>
  <div class="col-md-5">
    <h1 class="is-size-2">Signup</h1>

    <form class="form signup-form">
      <div class="form-group">
        <label for="name-signup">Name:</label>
        <input class="input is-large input is-focused" type="text" id="name-signup" />
        {{!-- <input class="input is-rounded" type="text" id="name-signup"/> --}}
      </div>
      
      <div class="form-group">
        <label for="email-signup">Email:</label>
        <input class="input is-large input is-hovered input is-focused" type="text" id="email-signup" />
      </div>
      <div class="form-group">
        <label for="password-signup">Password:</label>
        <input class="input is-large input is-hovered input is-focused" type="password" id="password-signup" />
      </div>
      <div class="form-group">
        <button class="button is-dark button is-medium is-half width button is-rounded button is-hovered button is-centered">SIGNUP</button>
      </div>
    </form>
  </div>
</div>

<script src="/js/login.js"></script>