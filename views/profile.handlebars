<div class="row">
  <div class="col-auto">
    <h1 class="is-size-1 has-text-black has-text-weight-bold	">Welcome, {{name}}</h1>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h5 class="is-size-1 has-text-black has-text-weight-bold	">Create A New Task</h5>

    <form class="form new-task-form" id="task-form">

      <div class="field">
        <label class="label">Select a Task Frequency:</label>
        <div class="control">
          <select id="frequency" class="select" name="frequency">
            <option value="daily">Daily</option>
            <option value="weekly">Weekly</option>
            <option value="monthly">Monthly</option>
          </select>
        </div>
      </div>
      
      <div class="field">
        <label for="title">Task Name:</label>
        <input class="form-input" type="text" id="title" name="title" />
      </div>

      <div class="field">
        <label for="task-date">Date:</label>
        <input class="form-input" type="date" id="task-date" name="task-date" value="2023-06-05" min="2023-06-05" max="2030-12-31">
      </div>

      <div class="field">
        <label for="task-body">Task Details</label>
        <div class="control">
        <textarea
          class="textarea"
          id="task-body"
          name="task-body"
          placeholder="Additional information..."
        ></textarea>
        </div>
      </div>

      <div class="field">
        <div class="control">
        <input type="submit" value="Create" class="btn btn-black has-text-white"></input>
        </div>
      </div>
    </form>

    {{#if username}}
    <div class="col-md-6 task-list">
        <h3>Current Tasks:</h3>

        {{> task-detail}}
    </div>
    {{/if}}
</div>

<script src="./js/profile.js"></script>