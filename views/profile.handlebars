<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{name}}</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3>Create a New Task</h3>

    <form class="form new-task-form">
      <label for="task">Select a Task Frequency:</label>
      <select class="task" name="task">
        <option value="daily">Daily Task</option>
        <option value="weekly">Weekly Task</option>
        <option value="monthly">Monthly Task</option>
      </select>
      
      <div class="form-group">
        <label for="day-name">Task Name:</label>
        <input class="form-input" type="text" id="day-name" name="day-name" />
      </div>
      <div class="form-group">
        <label for="task-date">Date:</label>
        <input class="form-input" type="date-local" id="task-date" name="task-date">
      </div>
      <div class="form-group">
        <label for="daily-task">Daily Tasks</label>
        <textarea
          class="form-input"
          type="text"
          id="daily-task"
          name="daily-task"
        ></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
      </div>
    </form>

    {{#if username}}
    <div class="col-md-6 task-list">
        <h3>Current Tasks:</h3>

        {{> task-detail}}
    </div>
    {{/if}}
</div>

<script src="./js/profile.js"></script>