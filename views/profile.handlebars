<div class="row">
  <div class="col-auto">
    <h1 class="is-size-1 is-underlined">Welcome, {{name}}</h1>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h1 class="is-size-1 is-underlined">Create a New Task</h1>

    <form class="form new-task-form">
      <label for="task">Select a Task Date:</label>
      <select class="task" name="task">
        <option value="daily task">Daily Task</option>
        <option value="weekly task">Weekly Task</option>
        <option value="monthly task">Monthly Task</option>
      </select>
      <input type="submit">

      
      <div class="form-group">
        <label for="day-name">Task Name:</label>
        <input class="form-input" type="text" id="day-name" name="day-name" />
      </div>
      <div class="form-group">
        <label for="daily-task">Daily Tasks:</label>
        <textarea
          class="form-input"
          type="text"
          id="daily-task"
          name="daily-task"
        ></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="button is-dark button is-medium is-half width button is-rounded button is-hovered button is-centered">CREATE</button>
      </div>
    </form>

    {{#if tasks.length}}
    <div class="col-md-6 task-list">
        <h3>Current Tasks:</h3>

        {{#each tasks as |task|}}
        <div class="row mb-2">
            <div class="col-md-8">
                <h4><a href="/task{{task.id}}">{{task.name}}</a></h4>
            </div>
            <div class="col-md-4">
                <button class="btn btn-sm btn-danger" data-id="{{task.id}}">DELETE</button>
            </div>
        </div>
        {{/each}}
    </div>
    {{/if}}
</div>

<script src="./js/profile.js"></script>